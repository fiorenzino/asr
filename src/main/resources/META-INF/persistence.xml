<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
         http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="GestAsr">
		<jta-data-source>${jta-data-source}</jta-data-source>
		<properties>
			<property name="hibernate.dialect" value="${hibernate.dialect}" />
			<property name="hibernate.hbm2ddl.auto" value="${hbm2ddl.auto}" />
			<property name="hibernate.default_schema" value="${default_schema}" />
			<property name="hibernate.show_sql" value="${show_sql}" />
			<property name="hibernate.format_sql" value="${format_sql}" />
		</properties>
	</persistence-unit>

</persistence>